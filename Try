    <script>
        const explanations = [
            "SYMOH Tech starts with designing attractive websites to build your online presence.",
            "We create robust eCommerce stores for seamless online shopping experiences.",
            "Tailored software applications for schools, accounting, and dental management.",
            "Affordable hardware solutions including desktops, laptops, and accessories.",
            "Comprehensive networking with expert consulting for your organization.",
            "Our technical team guides and supports every step of implementation."
        ];
        const container = document.getElementById('animation');
        const textElement = document.getElementById('text');
        let index = 0;
        function showNextExplanation() {
            container.classList.remove('visible');
            setTimeout(() => {
                textElement.textContent = explanations[index];
                container.classList.add('visible');
                index = (index + 1) % explanations.length;
            }, 500);
        }
        showNextExplanation();
        setInterval(showNextExplanation, 4000);
    </script>
